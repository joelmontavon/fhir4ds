# FHIR4DS Environment Configuration
# Copy this file to .env and update the values for your environment

# PostgreSQL Database Configuration
# Update with your PostgreSQL connection details
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# VSAC API Key for Terminology Services
# Get your API key from: https://uts.nlm.nih.gov/uts/signup-login
# This enables automatic ValueSet expansion and code system validation
VSAC_API_KEY=your_vsac_api_key_here

# Alternative name for VSAC API key (for compatibility with existing installations)
UMLS_API_KEY=your_vsac_api_key_here

# Terminology Service Configuration
TERMINOLOGY_CACHE_ENABLED=true
TERMINOLOGY_BASE_URL=https://cts.nlm.nih.gov/fhir

# Development and Debugging
DEBUG_MODE=false
LOG_LEVEL=INFO

# Test Configuration (for running test suites)
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postgres